<h1>SIGN UP</h1>

<%= form_with scope: :user, url: users_path, onsubmit: "submitHandler", local: true do |form| %>
	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>
	<p id = "pass">
		<%= form.label :password %><br>
		<%= form.text_field :password, {class: 'password', oninput: 'changed()', required: true} %>
	</p>
	<p>
		<%= form.label :confirm %><br>
		<%= form.text_field :confirm, {class: 'confirm', oninput: 'changed()', required: true} %>
	</p >

	<p>
		<%= form.submit class: 'userSubmit' %>
		<div class = "passwordError">Passwords do not Match</div>
	</p>
<% end %>

<%= link_to 'Login', login_path %>



