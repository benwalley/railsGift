<div class = "loginMain">
	<h1 class = "loginTitle">SIGN UP</h1>

	<%= form_with scope: :user, url: users_path, onsubmit: "submitHandler", local: true do |form| %>
		<p>
			
			<%= form.text_field :name, placeholder: 'username', class: 'loginText loginInput' %>
		</p>
		<p id = "pass">
			<%= form.password_field :password, {class: 'password loginText loginInput', oninput: 'changed()', required: true, placeholder: 'password'} %>
		</p>
		<p>
			
			<%= form.password_field :confirm, {class: 'confirm loginText loginInput', oninput: 'changed()', required: true, placeholder: 'cofirm password'} %>
		</p >

		<p>
			<%= form.submit 'Create User', class: 'userSubmit loginSubmit' %>
			<div class = "passwordError">Passwords do not Match</div>
		</p>
	<% end %>

	<%= link_to 'Login', login_path, class: 'signUp' %>

</div>

