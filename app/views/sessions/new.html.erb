<h1>LOGIN</h1>

<%= form_with scope: :user, url: login_path, local: true do |form| %>
	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>
	<p>
		<%= form.label :password %><br>
		<%= form.text_field :password %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Sign Up', new_user_path %>
